@inherits TvViewBase

<div class="table-object">
  @if (Open)
  {
    <MudSimpleTable Dense="true" Hover="true" Striped="true" Bordered="true" Style="display: inline-block;">
      <thead>
        <tr>
          <th colspan="2" class="title" @onclick="ToggleOpen">
            <div class="title-wrap">
              <span class="key-name">
                @Items.Count() keys
              </span>
            </div>
          </th>
        </tr>
      </thead>
      <tbody>
        @foreach (var (key, value) in Items)
        {
          <tr>
            <td class="name">@key</td>
            <td class="value">
              <TvElementView
                Parent="@this"
                Data="value"
                Options="Options"
                Depth="Depth + 1"
              />
            </td>
          </tr>
        }
      </tbody>
    </MudSimpleTable>
  }
  else
  {
    <MudButton OnClick="ToggleOpen" Variant="Variant.Outlined" Size="Size.Small">
        object (@Items.Count() keys)
    </MudButton>
  }
</div>