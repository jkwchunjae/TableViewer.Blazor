@{
    var buttonOptions = PopupAction.InnerButtonOptions;
}

<MudDialog>
    <TitleContent>
        @PopupAction.PopupTitle.Invoke(Item).ToString()
    </TitleContent>
    <DialogContent>
        <MudText>
            @PopupAction.PopupContent.Invoke(Item)
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton
            Variant="buttonOptions.ConfirmButtonStyle.Variant"
            Color="buttonOptions.ConfirmButtonStyle.Color"
            Size="buttonOptions.ConfirmButtonStyle.Size"
            OnClick="OnConfirm"
        >
            @buttonOptions.ConfirmLabel
        </MudButton>
        <MudButton
            Variant="buttonOptions.CloseButtonStyle.Variant"
            Color="buttonOptions.CloseButtonStyle.Color"
            Size="buttonOptions.CloseButtonStyle.Size"
            OnClick="OnClose"
        >
            @buttonOptions.CloseLabel
        </MudButton>
    </DialogActions>
</MudDialog>