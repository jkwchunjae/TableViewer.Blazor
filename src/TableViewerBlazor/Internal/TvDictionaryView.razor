@inherits TvViewBase

<div class="table-object">
  @if (Open)
  {
    <MudSimpleTable
      Dense="Options.Styles.Dense"
      Hover="Options.Styles.Hover"
      Striped="Options.Styles.Striped"
      Bordered="Options.Styles.Bordered"
      Style="display: inline-block;"
    >
      <thead>
        <tr>
          <th class="tv-title-counter" colspan="2" @onclick="ToggleOpen">
            <span>
              @Items.Count() keys
            </span>
          </th>
        </tr>
      </thead>
      <tbody>
        @foreach (var (key, value) in Items)
        {
          <tr>
            <td class="name">
              <TvElementView
                Parent="@this"
                Data="key"
                Options="Options"
                Depth="Depth + 1"
              />
            </td>
            <td class="value">
              <TvElementView
                Parent="@this"
                Data="value"
                Options="Options"
                Depth="Depth + 1"
              />
            </td>
          </tr>
        }
      </tbody>
    </MudSimpleTable>
  }
  else
  {
    <MudButton OnClick="ToggleOpen" Variant="Variant.Outlined" Size="Size.Small">
        object (@Items.Count() keys)
    </MudButton>
  }
</div>