@using Microsoft.AspNetCore.Components.Forms
@inherits TeEditorBase

<MudFileUpload T="IBrowserFile"
    Accept="@ImageUploaderOption.Accept"
    FilesChanged="LoadImage"
    Validation="@(new Func<object, Task<IEnumerable<string>>>(ImageValidation))"
>
    <ButtonTemplate>
        <MudButton HtmlTag="label"
                Variant="Style.Variant"
                Size="Style.Size"
                Color="Style.Color"
                Style="@Style.Style"
                StartIcon="@Style.StartIcon"
                EndIcon="@Style.EndIcon"
                IconSize="Style.IconSize"
                IconColor="Style.IconColor"
                for="@context.Id"
                >
            Only image files
        </MudButton>
    </ButtonTemplate>
</MudFileUpload>