@inherits TeEditorBase

@if (Data is string stringValue)
{
    <MudTextField
        T="string"
        Value="stringValue"
        ValueChanged="@(async value => await OnValueChanged(value))"
        Label="@Label"
        Validation="@(new Func<string, IEnumerable<string>>(TextFieldValidation))"
    />
}
