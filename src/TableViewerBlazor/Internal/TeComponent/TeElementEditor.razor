@inherits TeEditorBase

@if (Options.TryGetSelectBoxOption(MemberInfo, Data, out var selectBoxOption))
{
    <TeSelectBox
        Data="Data"
        DataChanged="@(async value => await DataChanged.InvokeAsync(value))"
        Options="Options"
        Depth="Depth"
        SelectBoxOption="@selectBoxOption"
    />
}
else if (Options.TryGetTextFieldOption(MemberInfo, Data, out var textFieldOption))
{
    <TeTextEditor
        Data="Data"
        DataChanged="@(async value => await DataChanged.InvokeAsync(value))"
        Options="Options"
        Depth="Depth"
        TextFieldOption="textFieldOption"
    />
}
else
{
    <TeObjectEditor Type="Type"
        Data="Data"
        DataChanged="@(async value => await DataChanged.InvokeAsync(value))"
        Options="Options"
        Depth="Depth"
    />
}
