@inherits TeEditorBase

@if (Options.TryGetSelectBoxOption(MemberInfo, Data, out var selectBoxOption))
{
    <TeSelectBox
        Data="Data"
        DataChanged="@(async value => await DataChanged.InvokeAsync(value))"
        Options="Options"
        Depth="Depth"
        SelectBoxOption="@selectBoxOption"
    />
}
else if (Type == typeof(string) && Data is string str)
{
    <MudTextField T="string" Label="@Name" Value="str" />
}
else if (Type == typeof(int) && Data is int intnum)
{
    <MudTextField T="int" Label="@Name" Value="intnum" />
}
else
{
    <TeObjectEditor Type="Type"
        Data="Data"
        DataChanged="@(async value => await DataChanged.InvokeAsync(value))"
        Options="Options"
        Depth="Depth"
    />
}
