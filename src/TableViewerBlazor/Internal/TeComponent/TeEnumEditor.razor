@inherits TeEditorBase

@* 여기까지 왔다는 뜻은 사용자가 Select, Radio 모두 명시적으로 선언하지 않았다는 뜻. *@

@if (selectBoxOption != null)
{
    <TeSelectBox
        Data="Data"
        DataChanged="@(async value => await DataChanged.InvokeAsync(value))"
        Options="Options"
        Depth="Depth"
        Label="@Label"
        SelectBoxOption="selectBoxOption"
    />
}
else if (radioOption != null)
{
    <TeRadio
        Data="Data"
        DataChanged="@(async value => await DataChanged.InvokeAsync(value))"
        Options="Options"
        Depth="Depth"
        Label="@Label"
        RadioOption="radioOption"
    />
}