@inherits TeEditorBase

@if (Data is int intValue)
{
    <MudNumericField
        T="int"
        Value="intValue"
        ValueChanged="@(async value => await OnValueChanged(value))"
        Label="@Label"
        Validation="@(new Func<long, IEnumerable<string>>(NumericFieldValidation))"
    />
}
else if (Data is long longValue)
{
    <MudNumericField
        T="long"
        Value="longValue"
        ValueChanged="@(async value => await OnValueChanged(value))"
