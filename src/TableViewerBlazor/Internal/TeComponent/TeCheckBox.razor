@inherits TeEditorBase

<MudField Label="@Label" Underline="@(CheckBoxOption.Property.Underline)">
    <MudCheckBox
        T="bool"
        Label="@CheckBoxLabel"
        Value="isChecked"
        ValueChanged="@(async isChecked => await OnValueChanged(isChecked))"

        Class="@(CheckBoxOption.Property.Class)"
        Style="@(CheckBoxOption.Property.Style)"
        Tag="@(CheckBoxOption.Property.Tag)"
        UserAttributes="@(CheckBoxOption.Property.UserAttributes)"
        Required="@(CheckBoxOption.Property.Required)"
        RequiredError="@(CheckBoxOption.Property.RequiredError)"
        ErrorId="@(CheckBoxOption.Property.ErrorId)"
        Culture="@(CheckBoxOption.Property.Culture)"
        Disabled="@(CheckBoxOption.Property.Disabled)"
        ReadOnly="@(CheckBoxOption.Property.ReadOnly)"
        Color="@(CheckBoxOption.Property.Color)"
        UncheckedColor="@(CheckBoxOption.Property.UncheckedColor)"
        LabelPosition="@(CheckBoxOption.Property.LabelPosition)"
        KeyboardEnabled="@(CheckBoxOption.Property.KeyboardEnabled)"
        Ripple="@(CheckBoxOption.Property.Ripple)"
        Dense="@(CheckBoxOption.Property.Dense)"
        Size="@(CheckBoxOption.Property.Size)"
        CheckedIcon="@(CheckBoxOption.Property.CheckedIcon)"
        UncheckedIcon="@(CheckBoxOption.Property.UncheckedIcon)"
        IndeterminateIcon="@(CheckBoxOption.Property.IndeterminateIcon)"
        TriState="@(CheckBoxOption.Property.TriState)"
    />
</MudField>