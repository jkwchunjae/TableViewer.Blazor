@inherits TeEditorBase

<MudTextField
    T="string"
    Value="stringValue"
    ValueChanged="@(value => OnValueChanged(value))"
    Label="@(TextFieldOption.Property.Label ?? Label)"
    Validation="@(new Func<string, Task<IEnumerable<string>>>(TextFieldValidation))"

    Class="@TextFieldOption.Property.Class"
    Style="@TextFieldOption.Property.Style"
    Tag="@TextFieldOption.Property.Tag"
    UserAttributes="@TextFieldOption.Property.UserAttributes"
    Required="@TextFieldOption.Property.Required"
    RequiredError="@TextFieldOption.Property.RequiredError"
    ErrorId="@TextFieldOption.Property.ErrorId"
    Culture="@TextFieldOption.Property.Culture"
    Disabled="@TextFieldOption.Property.Disabled"
    ReadOnly="@TextFieldOption.Property.ReadOnly"
    FullWidth="@TextFieldOption.Property.FullWidth"
    Immediate="@TextFieldOption.Property.Immediate"
    Underline="@TextFieldOption.Property.Underline"
    HelperId="@TextFieldOption.Property.HelperId"
    HelperText="@TextFieldOption.Property.HelperText"
    HelperTextOnFocus="@TextFieldOption.Property.HelperTextOnFocus"
    AdornmentIcon="@TextFieldOption.Property.AdornmentIcon"
    AdornmentText="@TextFieldOption.Property.AdornmentText"
    Adornment="@TextFieldOption.Property.Adornment"
    OnlyValidateIfDirty="@TextFieldOption.Property.OnlyValidateIfDirty"
    AdornmentColor="@TextFieldOption.Property.AdornmentColor"
    AdornmentAriaLabel="@TextFieldOption.Property.AdornmentAriaLabel"
    IconSize="@TextFieldOption.Property.IconSize"
    Variant="@TextFieldOption.Property.Variant"
    Margin="@TextFieldOption.Property.Margin"
    Typo="@TextFieldOption.Property.Typo"
    Placeholder="@TextFieldOption.Property.Placeholder"
    Counter="@TextFieldOption.Property.Counter"
    MaxLength="@TextFieldOption.Property.MaxLength"
    AutoFocus="@TextFieldOption.Property.AutoFocus"
    Lines="@TextFieldOption.Property.Lines"
    ShrinkLabel="@TextFieldOption.Property.ShrinkLabel"
    Format="@TextFieldOption.Property.Format"
    DebounceInterval="@TextFieldOption.Property.DebounceInterval"
    InputType="@TextFieldOption.Property.InputType"
    Clearable="@TextFieldOption.Property.Clearable"
    ClearIcon="@TextFieldOption.Property.ClearIcon"
    AutoGrow="@TextFieldOption.Property.AutoGrow"
    MaxLines="@TextFieldOption.Property.MaxLines"
    Mask="@TextFieldOption.Property.Mask"

    OnClearButtonClick="@(args => OnClearButtonClick(args))"
    OnDebounceIntervalElapsed="@(args => OnDebounceIntervalElapsed(args))"
    OnAdornmentClick="@(args => OnAdornmentClick(args))"
    OnBlur="@(args => OnBlur(args))"
    OnInternalInputChanged="@(args => OnInternalInputChanged(args))"
/>
