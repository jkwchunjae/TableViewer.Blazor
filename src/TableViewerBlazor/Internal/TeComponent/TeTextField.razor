@inherits TeEditorBase

@if (Data is string stringValue)
{
    <MudTextField
        T="string"
        Value="stringValue"
        ValueChanged="@(value => OnValueChanged(value))"
        Label="@(TextFieldOption?.Property?.Label ?? Label)"
        Validation="@(new Func<string, Task<IEnumerable<string>>>(TextFieldValidation))"

        InputType="@(TextFieldOption?.Property?.InputType ?? InputType.Text)"
        Clearable="@(TextFieldOption?.Property?.Clearable ?? default)"
        Mask="@(TextFieldOption?.Property?.Mask ?? default)"
        DebounceInterval="@(TextFieldOption?.Property?.DebounceInterval ?? default)"
        Disabled="@(TextFieldOption?.Property?.Disabled ?? default)"
        ReadOnly="@(TextFieldOption?.Property?.ReadOnly ?? default)"
        FullWidth="@(TextFieldOption?.Property?.FullWidth ?? default)"
        Immediate="@(TextFieldOption?.Property?.Immediate ?? default)"
        Underline="@(TextFieldOption?.Property?.Underline ?? default)"
        HelperText="@(TextFieldOption?.Property?.HelperText ?? default)"
        HelperTextOnFocus="@(TextFieldOption?.Property?.HelperTextOnFocus ?? default)"
        AdornmentIcon="@(TextFieldOption?.Property?.AdornmentIcon ?? default)"
        AdornmentText="@(TextFieldOption?.Property?.AdornmentText ?? default)"
        Adornment="@(TextFieldOption?.Property?.Adornment ?? default)"
        AdornmentColor="@(TextFieldOption?.Property?.AdornmentColor ?? default)"
        AdornmentAriaLabel="@(TextFieldOption?.Property?.AdornmentAriaLabel ?? default)"
        IconSize="@(TextFieldOption?.Property?.IconSize ?? default)"
        Variant="@(TextFieldOption?.Property?.Variant ?? default)"
        Margin="@(TextFieldOption?.Property?.Margin ?? default)"
        Placeholder="@(TextFieldOption?.Property?.Placeholder ?? default)"
        AutoFocus="@(TextFieldOption?.Property?.AutoFocus ?? default)"
        InputMode="@(TextFieldOption?.Property?.InputMode ?? default)"
        Pattern="@(TextFieldOption?.Property?.Pattern ?? default)"
        ShrinkLabel="@(TextFieldOption?.Property?.ShrinkLabel ?? default)"

        OnClearButtonClick="@(args => OnClearButtonClick(args))"
        OnDebounceIntervalElapsed="@(args => OnDebounceIntervalElapsed(args))"
        OnAdornmentClick="@(args => OnAdornmentClick(args))"
        OnBlur="@(args => OnBlur(args))"
        OnInternalInputChanged="@(args => OnInternalInputChanged(args))"
    />
}
