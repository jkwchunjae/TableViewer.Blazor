@inherits MonacoEditorBase
@using TableViewerBlazor.Internal.MonacoComponent

@if (Label != null)
{
    <h3 class="mb-3 ml-3">
        @Label
    </h3>
}

@if (Option != null)
{
    <StandaloneCodeEditor
        @ref="Editor"
        Id="@editorId"
        OnDidChangeModelContent="@OnYamlContentChanged"
        ConstructionOptions="@(EditorConstructionOptions)"
    />
}