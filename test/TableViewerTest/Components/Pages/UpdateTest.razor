@page "/update-test"


<TableViewer Data="person" Options="personOption" />

<MudButton OnClick="Update">Update</MudButton>

@code {

    Person person = new Person
    {
        Id = 213,
        Name = new PersonName("User name"),
        Attributes = new Dictionary<string, object>
        {
            ["age"] = 12,
        },
    };
    TvOptions personOption = new TvOptions
    {
        GlobalOpenDepth = 1,
        };

    private Task Update()
    {
        person.Name = new PersonName("Updated name");
        return Task.CompletedTask;
    }
}
