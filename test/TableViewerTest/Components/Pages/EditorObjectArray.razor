@page "/editor-object-array"

<PageTitle>Editor Object Array</PageTitle>

<MudText>Edit object array</MudText>

@if (items != null && options != null)
{
    <TableEditor2
        T="List<EditItem>"
        TParent1="EditItem"
        TItem1="EditInner"
        TParent2="EditItem"
        TItem2="EditInner2"
        Data="items"
        Options="options"
        DataChanged="OnDataChanged"
    >
        <CustomEditor1>
            <InnerEditorComponent Argument="context"/>
        </CustomEditor1>
        <CustomEditor2>
            <InnerEditorComponent2 Argument="context" />
        </CustomEditor2>
    </TableEditor2>

    <TableViewer Data="items" />
}
